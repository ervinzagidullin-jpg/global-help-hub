<div class="toast" id="toast" role="status" aria-live="polite" aria-atomic="true">
  <div>
    <div id="toastTitle" style="font-weight:850;"></div>
    <small id="toastBody"></small>
  </div>
  <button class="x" id="toastClose" aria-label="Close">✕</button>
</div>

<script>
  const $ = (s, r=document) => r.querySelector(s);

  // Theme
  const themeKey = "ghh-theme";
  function systemPref(){ return matchMedia("(prefers-color-scheme: light)").matches ? "light" : "dark"; }
  function setTheme(t){ document.documentElement.setAttribute("data-theme", t); localStorage.setItem(themeKey, t); }
  setTheme(localStorage.getItem(themeKey) || systemPref());
  $("#themeBtn").addEventListener("click", () => {
    const cur = document.documentElement.getAttribute("data-theme") || "dark";
    setTheme(cur === "dark" ? "light" : "dark");
    toast("Theme updated", "Saved preference.");
  });

  // Quick exit (change to a neutral site if you want)
  $("#quickExit").addEventListener("click", () => window.location.href = "https://www.google.com");

  // Build destination URL (directory-first approach)
  function buildUrl({country, topic, mode}) {
    const c = (country || "").trim();

    if (mode === "refugee") return "https://www.unhcr.org/where-we-work/countries";
    if (mode === "crisisNetwork") return "https://befrienders.org/";

    // Open Find A Helpline topic; include country as a query hint.
    const base = "https://findahelpline.com/topics/" + encodeURIComponent(topic);
    return c ? (base + "?q=" + encodeURIComponent(c)) : base;
  }

  // Toast
  const toastEl = $("#toast");
  const toastTitle = $("#toastTitle");
  const toastBody = $("#toastBody");
  let toastTimer = null;

  function toast(title, body){
    toastTitle.textContent = title || "";
    toastBody.textContent = body || "";
    toastEl.setAttribute("data-show", "true");
    clearTimeout(toastTimer);
    toastTimer = setTimeout(() => toastEl.setAttribute("data-show","false"), 4200);
  }
  $("#toastClose").addEventListener("click", () => toastEl.setAttribute("data-show","false"));

  // Main buttons
  $("#goBtn").addEventListener("click", () => {
    const country = $("#country").value;
    const topic = $("#topic").value;
    const mode = $("#mode").value;
    const url = buildUrl({country, topic, mode});
    window.open(url, "_blank", "noopener");
    toast("Opening support directory", "Select your country on the destination page for local numbers.");
  });

  $("#shareBtn").addEventListener("click", async () => {
    const country = $("#country").value.trim();
    const topic = $("#topic").value;
    const mode = $("#mode").value;
    const params = new URLSearchParams();
    if (country) params.set("country", country);
    params.set("topic", topic);
    params.set("mode", mode);

    const shareUrl = location.origin + location.pathname + "#" + params.toString();
    try{
      await navigator.clipboard.writeText(shareUrl);
      toast("Share link copied", "Send it to someone who needs it.");
    }catch{
      toast("Copy failed", "You can manually copy the address bar URL.");
    }
  });

  // Quick card buttons
  document.querySelectorAll("[data-settopic]").forEach(btn => {
    btn.addEventListener("click", () => {
      $("#topic").value = btn.getAttribute("data-settopic");
      $("#mode").value = "open";
      $("#goBtn").click();
    });
  });
  document.querySelectorAll("[data-mode]").forEach(btn => {
    btn.addEventListener("click", () => {
      $("#mode").value = btn.getAttribute("data-mode");
      $("#goBtn").click();
    });
  });

  // Read share state from hash (simple)
  if (location.hash && location.hash.length > 2) {
    const raw = location.hash.slice(1);
    const params = new URLSearchParams(raw);
    const country = params.get("country");
    const topic = params.get("topic");
    const mode = params.get("mode");
    if (country) $("#country").value = country;
    if (topic) $("#topic").value = topic;
    if (mode) $("#mode").value = mode;
  }
</script>
</body>
